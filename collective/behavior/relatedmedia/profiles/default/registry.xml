<?xml version="1.0"?>
<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n">

    <record name="collective.behavior.relatedmedia.media_container_path">
        <field type="plone.registry.field.TextLine">
            <title>Media Container</title>
            <description>Full traversable path to media container (remember to add Plone ID!)</description>
        </field>
        <value>/Plone/media</value>
    </record>

    <record name="collective.behavior.relatedmedia.image_gallery_cssclass">
        <field type="plone.registry.field.Tuple">
            <title>Gallery CSS classes</title>
            <value_type type="plone.registry.field.ASCIILine">
                <title>CSS Class</title>
            </value_type>
        </field>
        <value>
            <element>floatLeft</element>
            <element>floatRight</element>
            <element>fullWidth</element>
        </value>
    </record>

</registry>
